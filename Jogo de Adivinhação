programa {
  inclua biblioteca Util --> u
  logico reiniciar = verdadeiro
  inteiro sorteio = u.sorteia(1, 100)
  
  funcao jogo() {
  inteiro numero
  inteiro contador

  enquanto(contador<10){
  escreva("Digite um Número:\t")  
  leia(numero)
  }

   escreva("Adivinhe o Número\nentre os números 1 e 100")
   escreva("\nresposta:\t")
   leia(numero)

   se(numero == sorteio){
   escreva("Acertou\n")
   }
   
   se(numero > sorteio){
   escreva("É Menor")
   }
   
   se(numero < sorteio){
   escreva("É Maior")
   }

   funcao inicio() {
      enquanto (reiniciar) {
      jogo()
      escreva("\nDeseja calcular novamente? digite 'verdadeiro' para sim e 'falso' para não:\n")
      escreva("Resposta:\t")
      leia(reiniciar)
      limpa() 
      
       }
    }
  }
}
