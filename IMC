programa {
  funcao inicio() {

    real peso    
    real altura
    real result

    escreva("Calculadora de IMC\n")
    escreva("Qual o seu peso?")
    escreva("\nResposta:")
    leia(peso)
   
    escreva("Qual a sua altura?")
    escreva("\nResposta:")
    leia(altura)
 
    result = peso/(altura*altura) 
    escreva("Resultado:\t",result, "\n")
   
    se(result > 18.5 e result < 24.9){
     escreva("Está Normal")
    }
    
    se(result < 18.5){
     escreva("Está abaixo do Peso")
    }
   
    se(result > 24.9){
     escreva("Está acima do Peso")
    }

  }
   
 }
